doctype html
html
  head
    title= title

    link(rel="stylesheet", href="https://fonts.googleapis.com/icon?family=Material+Icons")
    link(rel="stylesheet", href="https://code.getmdl.io/1.3.0/material.blue-teal.min.css")
    link(rel='stylesheet', href='/stylesheets/client.css')

    script(src="//ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js")
    script(src="//www.gstatic.com/cv/js/sender/v1/cast_sender.js")
    script(src="//cdnjs.cloudflare.com/ajax/libs/rxjs/2.5.2/rx.all.js")
    script(defer, src="https://code.getmdl.io/1.3.0/material.min.js")

    script(type="text/javascript").
      // noinspection JSUnusedLocalSymbols
      function hashChanged(hash) {
        if (hash === '#waiting') {
          navigateToPage('/client/waiting', 'Trifles');
        } else if (hash === '#hosting') {
          navigateToPage('/client/hosting', 'Hosting');
        } else if(hash === '#selectcategory') {
          navigateToPage('/client/selectcategory', 'Select a Category');
        } else if (hash === '#trivia') {
          navigateToPage('/client/trivia', 'Trivia!');
        } else if (hash === '#gameover') {
          navigateToPage('/client/gameover', 'Game Over!');
        } else {
          navigateToPage('/client/welcome', 'Welcome!');
        }
      }
    script(src="/scripts/spa.js")

    script(src="/scripts/services/settings.js")
    script(src="/scripts/services/cast-sender-manager.js")
    script(src="/scripts/services/trivia-manager.js")
    script(type="text/javascript", defer).
      // noinspection JSUnusedLocalSymbols
      var castSenderManager = window.CastSenderManager.create();
      // noinspection JSUnusedLocalSymbols
      var triviaManager = window.TriviaManager.create();
      // noinspection JSUnusedLocalSymbols
      var myNickname = '';
      // noinspection JSUnusedLocalSymbols
      var isHosting = false;
      // noinspection JSUnusedLocalSymbols
      var hostNickname = '';

    meta(content="width=device-width, initial-scale=1.0, user-scalable=no", name="viewport")
    meta(content="#03A9F4", name="theme-color")

